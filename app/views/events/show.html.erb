<div class="container frontend">

  <!-- Blog Post Starts -->
  <div class="blog-post">
    <div class="blog-header">
      <!--Big Date-->
      <div class="blog-date"><span class="month"><%= @event.date ? l(@event.date, format: :month) : '?' %></span>
        <span class="day"><%= @event.date ? l(@event.date, format: :day) : '?' %></span> <span
      class="year"><%= @event.date ? l(@event.date, format: :year) : '2015' %></span></div>
      <!--/Big Date-->
      <div class="row page-header">
        <div class="col-md-7">
          <h1><%= @event.name.capitalize %></h1>
        </div>
        <div class="col-md-5">
          <%= render partial: 'attendances/attend_btn' %>
          <% if user_signed_in? && current_user.owner_of?(@event) %>

              <a href="<%= url_for edit_event_path(@event) %>" class="btn btn-info btn-event pull-right" style="margin-left: 8px">
                <i class="fa fa-pencil"></i> Modifier
              </a>
              <!--<a href="http://google.com" class="btn btn-danger btn-event pull-right">-->
              <!--<i class="fa fa-times"></i> Supprimer-->
              <!--</a>-->
          <% end %>
        </div>
      </div>

      <div class="blog-info clearfix">
        <div class="pull-left">
          <i class="fa fa-bookmark"></i> <a href="#"><%= @event.category.name %></a>
          <span class="grey">|</span>
          <i class="fa fa-user"></i> Crée par <a href="#"><%= @event.user.username %></a>
          <span class="grey">|</span>
          <i class="fa fa-comment"></i> 251
        </div>
        <button class="btn btn-default btn-xs pull-right" style="margin-right: 5px">
          <span><i class="fa fa-heart"></i></span> 256
        </button>
      </div>
    </div>
    <!--<div class="main-blog-img"><img class="img-responsive" src="http://placehold.it/1024x768"/></div>-->
    <div class="main-blog-img">
      <%= image_tag @event.picture_url(:thumb_1040).to_s, class: 'img-responsive' %>
    </div>


    <div class="dropcap"><%= @event.description[0] %></div>
    <p><%= @event.description[1..-1].gsub("\n", '<br/>').html_safe %></p>


    <div class="blog-tags padding">Tags:
      <% @event.tags.each do |t| %>
          <a href="#" rel="tag"><%= t.name %></a>
      <% end %>
    </div>
  </div>
  <!-- Blog Post Ends -->

  <!-- Post Author -->
  <div class="comments-block">
    <div class="page-header">
      <h1>Participants <span class="badge"><%= @event.attending_users.count + 1 %></span></h1>
    </div>
    <ul class="comments-list">
    </ul>

    <div class="blog-author"><img src="http://placehold.it/600x600" alt="Arthur" class="img-responsive"/>

      <p>
        <span class="bold-text"><%= @event.user.username.capitalize %></span>
        <span class="label bg-purple">Organisateur</span>
      </p>

      <p><%= @event.user.bio %></p>

      <!--<div class="social-buttons">-->
      <!--<ul class="social">-->
      <!--<li><a href="http://facebook.com/"><i class="entypo-facebook-circled"></i></a></li>-->
      <!--<li><a href="http://linkedin.com/"><i class="entypo-linkedin-circled"></i></a></li>-->
      <!--<li><a href="http://google.com/"><i class="entypo-gplus-circled"></i></a></li>-->
      <!--<li><a href="http://twitter.com/"><i class="entypo-twitter-circled"></i></a></li>-->
      <!--<li><a href="http://pinterest.com/"><i class="entypo-pinterest-circled"></i></a></li>-->
      <!--</ul>-->
      <!--</div>-->
    </div>

    <% @event.attending_users.each do |u| %>
        <div class="blog-author">
          <img src="http://placehold.it/600x600" alt="Arthur" class="img-responsive"/>

          <p>
            <span class="bold-text"><%= u.username.capitalize %></span>
            <span class="label bg-dark-blue">Participant</span>
          </p>

          <p><%= u.bio || '...' %></p>
        </div>
    <% end %>

  </div>
  <!--/Post Author-->

  <!-- Comments -->
  <div class="comments-block">
    <div class="page-header">
      <h1>Commentaires <span class="badge"><%= @event.comments.count %></span></h1>
    </div>
    <ul class="comments-list">
      <% @event.comments.each do |comment| %>
          <li>
            <div class="row">
              <div class="col-md-2 col-sm-3 col-xs-3"><img class="comments-author img-responsive"
                                                           src="http://placehold.it/600x600" alt="Arthur"
                                                           style="max-height: 102px"/></div>
              <div class="col-md-10 col-sm-9 col-xs-9">
                <div class="comment-content">
                  <div class="comments-info clearfix" style="margin-bottom: 9px">
                    <h4 class="pull-left"><a href="<%= comment.user.username %>">
                      <%= comment.user.username %>
                    </a></h4>
                    <!--<span class="comments-num pull-right">1</span>-->
                  </div>
                  <%= comment.content.gsub("\n", '<br/>').html_safe %>
                  <div class="comments-info">
                    Le <%= l comment.updated_at, format: :long %>
                    <% if current_user && current_user.owner_of?(comment) %>
                        <button class="btn btn-info btn-sm pull-right edit-comment"><i class="fa fa-reply"></i> Modifier
                        </button>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </li>
      <% end %>

    </ul>
  </div>
  <!--Comments Ends -->
  <!-- AddComment Form -->

  <div class="add-comment padding">

    <!--<form action="#" method="post" id="review-form" class="orb-form">-->
    <%= form_for [@event, Comment.new], url: comments_path, html: {class: 'orb-form'} do |f| %>
        <header>Ajouter un commentaire</header>
        <% if user_signed_in? %>
            <%= f.hidden_field :commentable_type, value: 'Event' %>
            <%= f.hidden_field :commentable_id, value: @event.id %>
            <fieldset>
              <!--<section>-->
              <!--<label class="input"> <i class="icon-append fa fa-user"></i>-->
              <!--<input type="text" name="name" id="name" placeholder="Your name">-->
              <!--</label>-->
              <!--</section>-->
              <!--<section>-->
              <!--<label class="input"> <i class="icon-append fa fa-envelope-o"></i>-->
              <!--<input type="email" name="email" id="email" placeholder="Your e-mail">-->
              <!--</label>-->
              <!--</section>-->

              <section>
                <label class="label"></label>
                <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                  <%= f.text_area :content, rows: 5, placeholder: 'Votre commentaire' %>
                  <!--<textarea rows="5" name="review" id="review" placeholder="Votre commentaire"></textarea>-->
                </label>
              </section>
            </fieldset>
            <footer>
              <%= button_tag(type: 'submit', class: 'btn btn-lg btn-default') do %>
                  <i class="fa fa-plus-circle"></i> Ajouter
              <% end %>
            </footer>
            <div class="message"><i class="fa fa-check"></i>

              <p>Your comment was successfully sent!</p>
            </div>
        <% else %>
            <br/>

            <div class="alert alert-warning">Vous devez
              <a href="<%= new_user_registration_path %>">créer un compte</a> ou
              <a href="<%= new_user_session_path %>">vous connecter</a> pour écrire un commenaire.
            </div>
        <% end %>
    <% end %>
    <!--</form>-->
  </div>

  <!-- /Comment Form-->
</div>
