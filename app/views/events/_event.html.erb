<div class="col-md-4 col-sm-6">
  <div class="blog-post-short" style="min-height: 346px;padding: 6px;border: 5px solid <%= event.category && event.category.color %>"><a href="<%= event_path event %>">
    <%#= image_tag @event.picture_url(:thumb_270_180).to_s, class: 'img-responsive' %>
    <img class="img-responsive"
         src="<%= image_url event.picture_url(:thumb_270_180).to_s %>"
         alt="blog"/></a>

    <div class="blog-header">
      <!--Big Date-->
      <div class="blog-date"><span class="month"><%= event.date ? l(event.date, format: :month) : '?' %></span>
        <span class="day"><%= event.date ? l(event.date, format: :day) : '?' %></span>
        <span class="year"><%= event.date ? l(event.date, format: :year) : '2015' %></span>
      </div>
      <!--/Big Date-->
      <div class="page-header">
        <h3><a href="<%= event_path event %>"><%= event.name.uc_first %></a></h3>
      </div>
      <div class="blog-info clearfix"><a href="#"><%= event.category.name %></a>
        Cr√©e par: <a href="<%= event_path event %>"><%= event.user.username.uc_first %></a></div>
    </div>
  </div>
</div>