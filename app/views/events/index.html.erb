<div class="frontend">
  <div class="row">

    <!--ItemsGrid-->
    <div class="goods-grid main-page-blog-posts">
      <div class="page-header">
        <div class="row">
          <div class="col-md-6">
            <h1><%= @event_future_count %> Evènements à venir</h1>
          </div>
          <div class="col-md-6 pull-right">
            <%	 if @current_user_activacteur %>
            <%= link_to 'Nouvel évènement', new_event_path, class: 'btn btn-default', style: 'float: right' %>
            <%	  end %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <%= paginate @events %>

        <!--<small class="pull-right text-cold-grey margin-top"><strong>Showing:</strong> 12 from 591</small>-->

      </div>
      <div class="form-group form-inline">

        <select id="select-filter-event-category" , class="form-control">
          <option value=""></option>
          <% @category.each do |c| %>
              <option value="<%= c.id	  %>"><%= c.name %></option>
          <%  end%>
        </select>
      </div>
      <div class="clearfix"></div>


      <% @events.future.order('date DESC').each do |e| %>
          <%= render partial: 'events/event', locals: {event: e} %>
      <% end %>

      <div class="clearfix"></div>
      <div class="col-md-12">
        <%= paginate @events %>
        <!--<small class="pull-right text-cold-grey margin-top"><strong>Showing:</strong> 12 from 591</small>-->
        <div class="clearfix"></div>
      </div>
    </div>
    <!--/ItemsGrid-->
<!-- #past events -->
    <div class="goods-grid main-page-blog-posts">
      <div class="page-header">
        <div class="row">
          <div class="col-md-6">
            <h1><%= @events_past_count %> Evènements passés</h1>
          </div>

        </div>
      </div>
      <div class="col-md-6">
        <%= paginate @events %>

        <!--<small class="pull-right text-cold-grey margin-top"><strong>Showing:</strong> 12 from 591</small>-->

      </div>

      <div class="clearfix"></div>


      <% @events.past.order('date DESC').limit(10).each do |e| %>
          <%= render partial: 'events/event', locals: {event: e} %>
      <% end %>

      <div class="clearfix"></div>
      <div class="col-md-12">
        <%= paginate @events %>
        <!--<small class="pull-right text-cold-grey margin-top"><strong>Showing:</strong> 12 from 591</small>-->
        <div class="clearfix"></div>
      </div>
    </div>

  </div>
</div>