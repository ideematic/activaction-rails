          <%= render partial: 'events/event', locals: {event: e} %>
      <% end %>

      <a href="/events" class="btn btn-default see-all btn-see-all">
        > Voir tous
      </a>

      <div class="clearfix"></div>
    </div>
    <!--/Latest Blog-->

  </div>

</div>
