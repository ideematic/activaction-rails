<div class="inner-spacer chat-window">
  <div class="chat-container">
    <div class="top-buttons clearfix">
      <h2 class="margin-0px pull-left">{{chattingWithName}}</h2>
      <!--<span class="badge">25</span>-->

      <div class="btn-group btn-group-sm pull-right">
        <!--<a class="btn btn-default"><i class="fa fa-thumbs-down"></i>-->
        <!--<span class="hidden-xs">Leave</span></a>-->
        <a class="btn btn-default close-window"><i class="fa fa-times-circle"></i>
          <span class="hidden-xs">Fermer</span>
        </a>
      </div>
    </div>

    <div class="chat-container">
      <div class="chat-pusher">
        <!--<div class="chat-content">-->

        <div class="chat-content-inner">

          <!-- Top Navigation -->

          <div class="clearfix">
            <div class="chat-messages chat-messages-with-sidebar">
              <ul>
                {{#each messages}}
                <li class="{{leftRight}} clearfix">
                  <div class="user-img pull-{{leftRight}}"><img src="http://placehold.it/150x150" alt="User Avatar"/>
                  </div>
                  <div class="chat-body clearfix">
                    <div class="header"><span class="name">{{userName}}</span><span class="name"></span> <span
                    class="badge">{{messageTime}}</span></div>
                    <p>
                      {{message}}
                    </p>
                  </div>
                </li>
                {{/each}}


              </ul>
            </div>
          </div>
        </div>


      </div>
      <!-- /chat-pusher -->
    </div>
  </div>
  <!-- /chat-container-->
  <!--Chat-form -->
  <div class="chat-message-form">
    <div class="row">
      <div class="col-md-8">
        <textarea placeholder="Salut, comment Ã§a va ?" class="form-control margin-bottom chat-box" rows="2"></textarea>
      </div>

      <div class="col-md-4 col-sm-4 col-xs-4">
        <button class="btn btn-info pull-right chat-button" type="button">Envoyer</button>
      </div>
    </div>
  </div>

  <!-- /Chat-form -->

</div>
